{
  "singleQuote": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "useTabs": false,
  "endOfLine": "lf",
  "quoteProps": "consistent",
  "overrides": [
    {
      "files": [".prettierrc", ".eslintrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["**/*.yml", "**/*.yaml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "package*.json",
      "options": {
        "printWidth": 1000
      }
    }
  ]
}
